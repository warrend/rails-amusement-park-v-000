<% if @message %>
  <div>
    <p><%= @message %></p>
  </div>
<% end %>

<div class="info">
	<p>Name: <%= @user.name %></p>
	<p>Tickets: <%= @user.tickets %></p>
	<p>Mood: <%= @user.mood %></p>
	<p>Height: <%= @user.height %></p>
	<% if @user.admin %>
		<p>ADMIN</p>
	<% end %>
	<p><%= link_to "See attractions", attractions_path %></p>
</div>